{
  "name": "Personal AI Development",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "charliermarsh.ruff"
      ]
    }
  },
  "postCreateCommand": "pip install -e ./packages/core -e ./packages/rag -e ./packages/llms -e ./packages/agents -e ./packages/connectors -e ./apps/assistant-api",
  "remoteUser": "vscode"
}
